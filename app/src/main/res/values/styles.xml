<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ProfileAttributeText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/profile_attribute_text</item>
        <item name="android:textColor">@color/colorProfileAttributeText</item>
        <item name="android:drawablePadding">@dimen/element_default_half_margin</item>
        <item name="android:drawableTint">@color/colorProfileAttributeIcon</item>
        <item name="android:layout_marginStart">@dimen/element_default_margin</item>
        <item name="android:layout_marginEnd">@dimen/element_default_margin</item>
        <item name="android:layout_marginTop">@dimen/element_default_margin</item>
    </style>

    <style name="EditProfileLabelText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/edit_profile_label_text</item>
        <item name="android:textColor">@color/colorEditProfileLabelText</item>
        <item name="android:padding">@dimen/element_default_half_margin</item>
        <item name="android:background">@color/colorEditProfileLabelBackground</item>
        <item name="android:paddingStart">@dimen/element_default_margin</item>
        <item name="android:paddingEnd">@dimen/element_default_margin</item>
    </style>

    <style name="EditProfileValueButton" parent="TextAppearance.AppCompat">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@color/editProfileValueButtonBackground</item>
        <item name="android:minHeight">@dimen/edit_profile_value_button_height</item>
        <item name="android:minWidth">@dimen/edit_profile_value_button_width</item>
        <item name="android:textSize">@dimen/edit_profile_value_text</item>
        <item name="android:textColor">@color/colorEditProfileValueText</item>
        <item name="android:padding">@dimen/element_default_half_margin</item>
        <item name="android:paddingStart">@dimen/element_default_margin</item>
        <item name="android:paddingEnd">@dimen/element_default_margin</item>
        <item name="android:drawableEnd">@drawable/ic_edit_white_24dp</item>
        <item name="android:drawableTint">@color/colorEditProfileValueText</item>
        <item name="android:gravity">start</item>
    </style>
</resources>
